<?xml version="1.0" encoding="utf-8"?><!-- The android:opacity=”opaque” line  > prevent a flash of black as theme transitions -->
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- background color -->
    <item android:drawable="@color/base_primary" />

    <!-- logo -->
    <item
        android:width="64dp"
        android:height="64dp"
        android:drawable="@drawable/ic_launcher_base"
        android:gravity="center" />

</layer-list>