<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/list_select_icon_height"
        android:layout_height="@dimen/list_select_icon_height"
        android:src="@drawable/ic_plus"
        app:tint="@color/color_on_background" />

    <TextView
        style="@style/statDescription"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/stat_blank_info_text" />
</LinearLayout>

