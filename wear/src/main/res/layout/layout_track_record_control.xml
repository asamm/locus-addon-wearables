<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewDashboardValue"
                android:id="@+id/text_view_info_01"
                android:textSize="18sp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewDashboardValue"
                android:id="@+id/text_view_info_02"
                android:textSize="18sp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_track_rec_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/track_rec_btn_size"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            style="@style/ButtonTrackRecord"
            android:id="@+id/image_view_track_rec_stop"
            android:src="@drawable/ic_96_track_recording_stop" />

        <ImageButton
            style="@style/ButtonTrackRecord"
            android:id="@+id/image_view_track_rec_pause"
            android:src="@drawable/ic_96_track_recording_pause" />

        <ImageButton
            style="@style/ButtonTrackRecord"
            android:id="@+id/image_view_track_rec_add_wpt"
            android:src="@drawable/ic_96_track_recording_add_wpt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewDashboardTitle"
                android:id="@+id/text_view_info_03"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewDashboardTitle"
                android:id="@+id/text_view_info_04"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
