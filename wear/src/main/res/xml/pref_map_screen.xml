<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="map_navigation_on"
        android:title="@string/pref_title_map_nav_panel"/>

    <ListPreference
        android:defaultValue="17"
        android:entries="@array/pref_zoom_levels"
        android:entryValues="@array/pref_zoom_levels"
        android:key="map_zoom_top"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Zoom top"
        android:summary="@string/pref_summary_map_zoom_top"
        />
    <ListPreference
        android:defaultValue="19"
        android:entries="@array/pref_zoom_levels"
        android:entryValues="@array/pref_zoom_levels"
        android:key="map_zoom_middle"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Zoom middle" />
    <ListPreference
        android:defaultValue="20"
        android:entries="@array/pref_zoom_levels"
        android:entryValues="@array/pref_zoom_levels"
        android:key="map_zoom_bottom"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Zoom bottom" />

</PreferenceScreen>
