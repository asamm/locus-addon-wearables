<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExtensionLightTheme" parent="@android:style/Theme" />

    <style name="rootActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/box_inset_layout_padding</item>
    </style>

    <!-- *************************************************** -->
    <!-- NAVIGATION DRAWER -->
    <!-- *************************************************** -->

    <style name="navDrawerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- *************************************************** -->
    <!-- STATISTICS -->
    <!-- *************************************************** -->
    <style name="trackStatLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/component_padding_quarter</item>
    </style>

    <style name="TvCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="TvCaption.Light">
        <item name="android:textColor">@color/base_primary</item>
    </style>

    <style name="statText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="statText.Big">
        <item name="android:textSize">@dimen/text_size_enormous</item>
    </style>
    <style name="statDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_minuscule</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="statIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/stat_icon_height</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- *************************************************** -->
    <!-- MAP ACTIVITY -->
    <!-- *************************************************** -->
    <style name="zoomButton">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/panel_map_side</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:scaleX">@dimen/map_fab_scale</item>
        <item name="android:scaleY">@dimen/map_fab_scale</item>
    </style>

    <!-- *************************************************** -->
    <!-- SEPARATORS -->
    <!-- *************************************************** -->

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_color</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/separator_color</item>
    </style>

    <style name="SeparatorHorizontal.WithPadding">
        <item name="android:layout_marginLeft">@dimen/outer_frame_layout_padding</item>
        <item name="android:layout_marginRight">@dimen/outer_frame_layout_padding</item>
    </style>

    <style name="SeparatorVertical.WithPadding">
        <item name="android:layout_marginBottom">@dimen/outer_frame_layout_padding</item>
        <item name="android:layout_marginTop">@dimen/outer_frame_layout_padding</item>
    </style>


    <!-- *************************************************** -->
    <!-- BUTTONS -->
    <!-- *************************************************** -->
    <style name="ButtonTrackRecord">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">9dp</item>
    </style>
    <style name="ButtonTrackRecord.Ext">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="BtnWaypointNameSelect" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/component_padding_half</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/base_light_primary</item>
        <item name="android:textColor">@color/base_dark_primary</item>
        <item name="android:drawableTint">@color/base_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- *************************************************** -->
    <!-- LIST ITEMS -->
    <!-- *************************************************** -->

    <style name="TextViewListTitle">
        <item name="android:id">@id/text_view_title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="LocusWearBasicButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>