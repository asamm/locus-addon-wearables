<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asamm.locus.addon.wear">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.asamm.locus.addon.wear.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_no1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- register service for events -->
        <service android:name="com.asamm.locus.addon.wear.DeviceListenerService">

            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/locus/wear"
                    android:scheme="wear" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />

                <data
                    android:host="*"
                    android:pathPrefix="/locus/wear"
                    android:scheme="wear" />
            </intent-filter>

        </service>

    </application>

</manifest>
